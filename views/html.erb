<section id='main'>
<% @snippets.each do |snippet| %>
  <table class='html-viewer'>
  <tr>
    <th><%= snippet.title %></th>
  </tr>
  <tr>
    <td><%= snippet.kind %></td>
  </tr>
  <tr>
      <td><pre class='prettyprint'><%= snippet.work.gsub('&', '&amp;').gsub('<', '&lt;').gsub('>', '&gt;') %></pre></td>
  </tr>

  </table>
<% end %>

</section>